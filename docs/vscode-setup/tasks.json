{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Unity: Run All Tests (VS Code Optimized)",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "./vscode-test-runner.ps1"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                {
                    "owner": "unity-tests",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "^\\s*❌\\s+(.+)\\s+-\\s+Failed$",
                            "file": 1,
                            "message": 1
                        }
                    ]
                }
            ]
        },
        {
            "label": "Unity: Run All Tests (Headless)",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "./run_tests.ps1"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                {
                    "owner": "unity-tests",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "^\\s*❌\\s+(.+)\\s+-\\s+Failed$",
                            "file": 1,
                            "message": 1
                        }
                    ]
                }
            ]
        },
        {
            "label": "Unity: Run PlayMode Tests",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "./run_tests.ps1"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "UNITY_TEST_PLATFORM": "PlayMode"
                }
            },
            "problemMatcher": [
                {
                    "owner": "unity-tests",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "^\\s*❌\\s+(.+)\\s+-\\s+Failed$",
                            "file": 1,
                            "message": 1
                        }
                    ]
                }
            ]
        },
        {
            "label": "Unity: Run EditMode Tests",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "./run_tests.ps1"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "UNITY_TEST_PLATFORM": "EditMode"
                }
            },
            "problemMatcher": [
                {
                    "owner": "unity-tests",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "^\\s*❌\\s+(.+)\\s+-\\s+Failed$",
                            "file": 1,
                            "message": 1
                        }
                    ]
                }
            ]
        },
        {
            "label": "Unity: Run Specific Test",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "./vscode-test-runner.ps1",
                "-TestFilter", "${input:testFilter}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                {
                    "owner": "unity-tests",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "^\\s*❌\\s+(.+)\\s+-\\s+Failed$",
                            "file": 1,
                            "message": 1
                        }
                    ]
                }
            ]
        },
        {
            "label": "Unity: Open Test Results",
            "type": "shell",
            "command": "code",
            "args": [
                "${workspaceFolder}/debug"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Unity: Clean Test Results",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Path '${workspaceFolder}/debug/TestResults_*.xml' -Force -ErrorAction SilentlyContinue; Remove-Item -Path '${workspaceFolder}/debug/unity_powershell_test_*.log' -Force -ErrorAction SilentlyContinue; Write-Host 'Test results cleaned'"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "testFilter",
            "description": "Enter test name or pattern to filter tests",
            "default": "",
            "type": "promptString"
        }
    ]
}